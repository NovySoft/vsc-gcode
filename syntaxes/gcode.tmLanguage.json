{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "G-code",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#coordinates"
		}
	],
	"repository": {
		"coordinates": {
			"patterns": [
				{
					"match": "([xX])\\s?(\\-?\\d*\\.?\\d+\\.?|\\-?\\.?(?=[#\\[]))",
					"name": "string.gcode"
				},
				{
					"match": "([yY])\\s?(\\-?\\d*\\.?\\d+\\.?|\\-?\\.?(?=[#\\[]))",
					"name": "string.gcode"
				},
				{
					"match": "([zZ])\\s?(\\-?\\d*\\.?\\d+\\.?|\\-?\\.?(?=[#\\[]))",
					"name": "string.gcode"
				},
				{
					"match": "([fF|eE|sS])\\s?(\\-?\\d*\\.?\\d+\\.?|\\-?\\.?(?=[#\\[]))",
					"name": "string.regexp.gcode"
				},
				{
					"match": "(?<=\\s)(X|Y|Z)(?=\\s)",
					"name": "string.gcode"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.gcode",
					"match": "(\\(.+\\))"
				},
				{
					"name": "comment.gcode",
					"begin": ";",
					"end": "\\n"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"match": "[gG]38\\.[0-5]",
					"name": "constant.language.gcommand.gcode",
					"comment": "G38.1, G38.2... G38.5"
				},
				{
					"match": "[gG]59\\.[1-3]",
					"name": "constant.language.gcommand.gcode",
					"comment": "G59.1, G59.2, G59.3"
				},
				{
					"match": "[gG][0-9]{1,3}",
					"name": "constant.language.gcommand.gcode"
				},
				{
					"match": "[mM][0-9]{1,3}",
					"name": "token.info-token.mcommand.gcode"
				},
				{
					"match": "[tT][0-6]",
					"name": "token.warn-token.mcommand.gcode"
				}
			]
		}
	},
	"scopeName": "source.gcode"
}